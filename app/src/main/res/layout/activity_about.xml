<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5E7CF"
    tools:context=".About">

    <Button
        android:id="@+id/goBackAboutBtn"
        android:layout_width="240dp"
        android:layout_height="61dp"

        android:layout_marginBottom="49dp"
        android:backgroundTint="#3c3d37"
        android:text="Go Back"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="189dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="12dp"
        android:text="About us"
        android:textSize="40dp"
        android:textColor="#217187"

        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />


    <TextView
        android:id="@+id/aboutDescription"
        android:layout_width="286dp"
        android:layout_height="356dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="52dp"
        android:lineSpacingExtra="4dp"
        android:text="Our app simplifies HR tasks\nfor teachers and makes course\nregistration easier for students.\n\nStudents can register for courses\nwith just a few clicks through\nan intuitive, real-time interface.\n\nTeachers get live analytics\non enrollment and course status,\nhelping them track progress and\nmake data-driven decisions easily."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="19dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:textColor="#217187"

        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="377dp"
        android:text="Welcome to Human Resources!!"
        android:textSize="19dp"
        app:layout_constraintBottom_toTopOf="@+id/goBackAboutBtn"
        app:layout_constraintStart_toStartOf="@+id/aboutDescription"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

</androidx.constraintlayout.widget.ConstraintLayout>